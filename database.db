CREATE TABLE student (
    id TEXT PRIMARY KEY,
    username TEXT NOT NULL,
    student_number TEXT NOT NULL,
    name TEXT NOT NULL,
    surname TEXT NOT NULL,
    password TEXT NOT NULL,
    role TEXT NOT NULL,
    mail TEXT NOT NULL,
    phone TEXT NOT NULL,
    department TEXT NOT NULL
);

CREATE TABLE document (
    id TEXT PRIMARY KEY,
    student_id TEXT,
    document_type TEXT CHECK(document_type IN ('transcript', 'student document')) NOT NULL,
    invoice_file TEXT,
    request_date TEXT,
    status TEXT CHECK(status IN ('pending', 'approved', 'rejected')),
    gpa REAL,
    cgpa REAL,
    semester TEXT,
    FOREIGN KEY (student_id) REFERENCES student(id)
);

CREATE TABLE rsa (
    id TEXT PRIMARY KEY,
    public_key TEXT,
    private_key TEXT
)
